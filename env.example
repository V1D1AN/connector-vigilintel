# OpenCTI Configuration
OPENCTI_URL=http://localhost:8080
OPENCTI_TOKEN=your_opencti_admin_token_here

# Connector Configuration
CONNECTOR_ID=vigilintel-connector-unique-id
VIGILINTEL_INTERVAL=24  # Hours between runs
VIGILINTEL_LANGUAGE=FR  # Language: FR (French) or EN (English)

# Optional: Force immediate run for testing
FORCE_RUN=false  # Set to true for immediate execution

# Example values:
# OPENCTI_URL=https://your-opencti-instance.com
# OPENCTI_TOKEN=abcd1234-5678-90ef-abcd-1234567890ab
# CONNECTOR_ID=vigilintel-$(date +%s)
# VIGILINTEL_INTERVAL=12
# VIGILINTEL_LANGUAGE=EN
